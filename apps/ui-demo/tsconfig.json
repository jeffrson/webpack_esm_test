{
    "compileOnSave": true,
    "compilerOptions": {
        "allowSyntheticDefaultImports": true,
        "experimentalDecorators": true,
        "forceConsistentCasingInFileNames": true,
        "inlineSources": true,
        "jsx": "react",
        "module": "esnext",
        "moduleResolution": "node",
        "noEmitOnError": true,
        "noImplicitAny": true,
        "noUnusedLocals": true,
        "removeComments": true,
        "skipLibCheck": true,
        "sourceMap": true,
        "strictNullChecks": true,
        "strictPropertyInitialization": false,
        "target": "es2020",
        "esModuleInterop": true
    },
    "include": [
        "src/**/*.ts",
        "src/**/*.tsx"
    ]
}
